<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="imitate.mybatis.code.generation.data.base.dao.ITableDao">

	<!-- 查询表名称 -->
	<select id="queryTableList" parameterType="DataBaseTable" resultType="DataBaseTable">
		SELECT table_name,table_comment FROM information_schema.tables
		<where>
			table_type='BASE TABLE' and
			table_schema = #{table_schema}
		</where>

	</select>

	<!-- 查询表字段信息 -->
	<select id="queryTableFieldList" parameterType="QueryTableField" resultType="QueryTableField">
		select
		*
		from information_schema.columns
		where
		table_schema=#{table_schema} and table_name=#{table_name}
	</select>

	<!-- 标的约束条件就是所以 SELECT * FROM information_schema.table_constraints; -->
	<!-- 表字段类 <resultMap id="MTableFieldMap" type="MTableFieldPO"> <result property="column_name" column="COLUMN_NAME" /> <result property="ordinal_position" 
		column="ORDINAL_POSITION" /> <result property="is_nullable" column="IS_NULLABLE" /> <result property="data_type" column="DATA_TYPE" /> <result property="column_type" 
		column="COLUMN_TYPE" /> <result property="column_comment" column="COLUMN_COMMENT" /> </resultMap> -->
</mapper>
